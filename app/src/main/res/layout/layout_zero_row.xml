<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:custom="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:background="@color/black"
              android:orientation="horizontal">

    <com.droidev.app.ioscalculator.ui.widgets.CalcTextView
        android:id="@+id/number_0"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/normal_item_margin"
        android:layout_marginRight="@dimen/normal_item_margin"
        android:layout_marginTop="@dimen/normal_item_margin"
        android:layout_weight="2"
        android:background="@drawable/normal_bg"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_32"
        custom:typefaceAsset="fonts/Roboto-Light.ttf"/>

    <com.droidev.app.ioscalculator.ui.widgets.CalcTextView
        android:id="@+id/decimal_point"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/normal_item_margin"
        android:layout_weight="1"
        android:background="@drawable/normal_bg"
        android:gravity="center"
        android:text="."
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_32"
        custom:typefaceAsset="fonts/Roboto-Light.ttf"/>

    <com.droidev.app.ioscalculator.ui.widgets.CalcTextView
        android:id="@+id/equals"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/normal_item_margin"
        android:layout_marginRight="@dimen/normal_item_margin"
        android:layout_marginTop="@dimen/normal_item_margin"
        android:layout_weight="1"
        android:background="@drawable/orange_bg"
        android:gravity="center"
        android:text="="
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_32"
        custom:typefaceAsset="fonts/Roboto-Light.ttf"/>
</LinearLayout>